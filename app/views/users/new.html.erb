<div class="row">
  <div class="col-md-6 offset-md-3">
  <h1>Sign up</h1>
  <%= render 'layouts/errors_messages' %>
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name,class:"mb-2 form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email,class:"mb-2 form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password,class:"mb-2 form-control" %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation,class:"mb-2 form-control" %>

      <%= f.submit "Create my account", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>